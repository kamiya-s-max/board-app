#account-page.account-page
  = render "shared/header"
  .account-page__inner
    .form_box
      .form.form__title
        Sign Up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        -# = devise_error_messages!
        .form
          = f.label :email, class: "label"
          %br/
          = f.email_field :email, autofocus: true, placeholder: 'メールアドレスを入力', class: "field"
          = render partial: 'modules/user_error_message', locals: {user: @user, column: "email"}
        .form
          = f.label :password, class: "label"
          - if @validatable
            %i
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "off", placeholder: 'パスワードを入力', class: "field"
          = render partial: 'modules/user_error_message', locals: {user: @user, column: "password"}
        .form
          = f.label :password_confirmation, class: "label"
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワードを入力（確認）', class: "field"
          = render partial: 'modules/user_error_message', locals: {user: @user, column: "password_confirmation"}
        .form
          = f.label :nickname, class: "label"
          %br/
          = f.text_field :nickname, placeholder: 'ニックネームを入力(必須)', class: "field"
          = render partial: 'modules/user_error_message', locals: {user: @user, column: "nickname"}
        .image__field
          = f.file_field :avatar, class: "image__field"
        .submit
          .actions
            = f.submit class: "submit__btn"
        .form.more_link_box
          %strong すでにアカウントを持っていますか？
          = render "devise/shared/links"
