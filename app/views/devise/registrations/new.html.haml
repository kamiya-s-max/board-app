#contents.bgcolor-white.pt1em.pb1em
  #main_cnt_wrapper
    #yjContentsBody
      .yjContainer
        .form_box
          %h2
            Board
            %span Sign up
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .label
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, placeholder: 'メールアドレスを入力'
            .label
              = f.label :password
              - if @validatable
                %i
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "off", placeholder: 'パスワードを入力'
            .label
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワードを入力（確認）'
            .label
              = f.label :nickname
              %br/
              = f.text_field :nickname, placeholder: 'ニックネームを入力(必須)'
            .field
              = f.file_field :avatar
            .submit
              .actions
                = f.submit
            .more_link_box
              %strong すでにアカウントを持っていますか？
              = render "devise/shared/links"
